# Seal Protocol Configuration
# Seal is Mysten Labs' threshold encryption service for Sui

# Sui Network (testnet, devnet, mainnet)
SUI_NETWORK=testnet

# Sui Fullnode RPC URL
SUI_FULLNODE_URL=https://fullnode.testnet.sui.io:443

# Seal Package ID
# Testnet: 0x927a54e9ae803f82ebf480136a9bcff45101ccbe28b13f433c89f5181069d682
# Mainnet: 0xa212c4c6c7183b911d0be8768f4cb1df7a383025b5d0ba0c014009f0f30f5f8d
SEAL_PACKAGE_ID=0x927a54e9ae803f82ebf480136a9bcff45101ccbe28b13f433c89f5181069d682

# Seal Threshold (minimum number of key servers needed for decryption)
# Default: 2 (requires at least 2 out of 3 key servers)
SEAL_THRESHOLD=2

# Seal Key Servers Configuration
# JSON array of key server configs: [{"objectId": "...", "weight": 1, "apiKeyName": "...", "apiKey": "..."}]
# If not provided, defaults to testnet key servers will be used
# SEAL_KEY_SERVERS=[{"objectId":"0x73d05d62c18d9374e3ea529e8e0ed6161da1a141a94d3f76ae3fe4e99356db75","weight":1},{"objectId":"0xf5d14a81a982144ae441cd7d64b09027f116a468bd36e7eca494f750591623c8","weight":1},{"objectId":"0x164ac3d2b3b8694b8181c13f671950004765c23f270321a45fdd04d40cccf0f2","weight":1}]

# Seal Session Private Key
# Ed25519 private key for creating session keys for decryption
# Must be authorized by your Move module's seal_approve function
# Format: base64-encoded bytes or suiprivkey1... format
# Generate with: npx ts-node scripts/generate-keypair.js
SEAL_SESSION_PRIVATE_KEY=

# Seal Configuration Options
# Verify key servers on initialization (default: true)
SEAL_VERIFY_KEY_SERVERS=true

# Timeout for key server requests in milliseconds (default: 10000)
SEAL_TIMEOUT_MS=10000

# Seal metadata storage mode: 'db' for MySQL, 'memory' for in-memory (dev/testing only)
SEAL_METADATA_MODE=db

# Seal Approve Module Name (default: seal_policy)
# The Move module that contains the seal_approve entry function
SEAL_APPROVE_MODULE=seal_policy

