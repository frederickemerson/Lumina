{
  "name": "obscura-backend",
  "version": "1.0.0",
  "description": "Lumina backend server",
  "main": "dist/server.js",
  "scripts": {
    "setup:mysql": "node scripts/setup-mysql.js",
    "setup": "./scripts/quick-setup.sh",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "seal:check": "ts-node --project tsconfig.json scripts/checkSealConnectivity.ts",
    "seal:test": "ts-node --project tsconfig.json scripts/sealE2eTest.ts",
    "wal:check": "ts-node --project tsconfig.json scripts/get-wal-tokens.ts",
    "wal:fund": "ts-node --project tsconfig.json scripts/fund-walrus-address.ts",
    "wal:status": "ts-node --project tsconfig.json scripts/check-walrus-status.ts",
    "e2e:full": "ts-node --project tsconfig.json scripts/e2eFullWorkflowTest.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:timed-nft": "ts-node --project tsconfig.json scripts/test-timed-nft-unlock.ts",
    "test:timed-nft-e2e": "ts-node --project tsconfig.json scripts/test-timed-nft-e2e.ts",
    "verify:nft-display": "ts-node --project tsconfig.json scripts/verify-nft-display.ts",
    "test:nft-display": "ts-node --project tsconfig.json scripts/test-nft-display.ts",
    "deploy:walrus-site": "ts-node --project tsconfig.json ../scripts/deploy-walrus-site.ts"
  },
  "keywords": [
    "lumina",
    "sui",
    "blockchain",
    "memories",
    "encryption",
    "nft"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@mysten/seal": "^0.9.4",
    "@mysten/sui": "^1.44.0",
    "@mysten/sui.js": "latest",
    "@mysten/walrus": "^0.8.3",
    "@types/cookie-parser": "^1.4.10",
    "@types/multer": "^2.0.0",
    "@types/snappy": "^6.0.0",
    "axios": "^1.6.0",
    "bs58": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "ipfs-http-client": "^60.0.1",
    "multer": "^2.0.2",
    "mysql2": "^3.15.3",
    "node-cache": "^5.1.2",
    "node-cron": "^4.2.1",
    "snappy": "^7.3.3",
    "snarkjs": "^0.7.0",
    "ws": "^8.18.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/form-data": "^2.2.1",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.10.0",
    "@types/supertest": "^2.0.16",
    "form-data": "^4.0.5",
    "jest": "^29.7.0",
    "supertest": "^6.3.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
